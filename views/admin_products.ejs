<%- include('./partials/header'); %>

<body class="bg-gray-100">
    <div class="flex flex-col min-h-screen">
        <!-- Header -->
        <header class="bg-white shadow">
            <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold text-gray-900">Product Management</h1>
            </div>
        </header>

        <!-- Main content -->
        <main class="flex-1 overflow-y-auto">
            <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                <!-- Search Bar -->
                <div class="mb-6">
                    <form action="/v1/admin/products/search" method="GET" class="flex">
                        <input type="text" name="product_id" placeholder="Search by Product ID"
                            class="w-full p-2 border border-gray-300 rounded-l">
                        <button type="submit"
                            class="bg-indigo-600 text-white py-2 px-4 rounded-r hover:bg-indigo-700">
                            Search
                        </button>
                    </form>
                </div>

                <!-- Product List by Category -->
                <% for (let key in products) { %>
                    <div class="bg-white shadow rounded-lg mb-6 p-6">
                        <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                            <%= key %>
                        </h2>

                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% products[key].forEach(function(elem) { %>
                                <div class="bg-gray-50 p-4 rounded-lg shadow">
                                    <% if (elem.images && elem.images.length > 0) { %>
                                        <img class="w-32 h-32 mb-3 object-cover rounded"
                                            src="/uploads/<%= elem.images[0] %>"
                                            alt="<%= elem.name %>">
                                    <% } else { %>
                                        <div class="w-32 h-32 mb-3 bg-gray-200 flex items-center justify-center rounded">
                                            <span class="text-gray-500 text-sm">No Image</span>
                                        </div>
                                    <% } %>

                                    <h3 class="text-lg font-medium text-gray-900"><%= elem.name %></h3>
                                    <!-- Display Mode (Price + Stock as Text) -->
                                     <div id="view-mode-<%= elem._id %>">
                                         <p class="mt-2 text-gray-600">Price: ₹<%= elem.price %></p>
                                         <p class="mt-2 text-gray-600">Stock: <%= elem.stock %></p>
                                     </div>

                                     <!-- Edit Mode (Hidden Initially) -->
                                     <form id="edit-mode-<%= elem._id %>" action="/v1/products/update-fields/<%= elem._id %>" method="POST" class="flex flex-col gap-2 mt-3 hidden">
                                         <div>
                                             <label class="text-gray-600 text-sm">Price (₹)</label>
                                             <input type="number" name="price" value="<%= elem.price %>" required class="w-full border rounded p-2" />
                                         </div>
                                         <div>
                                             <label class="text-gray-600 text-sm">Stock</label>
                                             <input type="number" name="stock" value="<%= elem.stock %>" required class="w-full border rounded p-2" />
                                         </div>

                                         <button type="submit" class="mt-2 bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 text-sm">
                                             Save Changes
                                         </button>
                                     </form>
                                    <p class="mt-2 text-gray-600"><%= elem.description %></p>
                                    <p class="mt-2 text-sm text-gray-500">Product ID: <%= elem._id %></p>

                                    <div class="mt-5 flex gap-4">
                                        <form method="POST" action="/v1/products/delete" onsubmit="return confirm('Are you sure to delete?');">
                                            <input type="hidden" name="product_id" value="<%= elem._id %>">
                                            <button type="submit" class="text-red-600 hover:underline">Delete</button>
                                        </form>
                                        <a href="/v1/products/edit/<%= elem._id %>" class="text-blue-600 hover:underline">Update</a>
                                        <button type="button" onclick="toggleEditMode('<%= elem._id %>')" class="text-yellow-600 hover:underline">Edit</button>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <div class="mt-4 text-center">
                            <a href="/v1/admin/products?category=<%= key %>&page=2"
                                class="text-indigo-600 hover:text-indigo-800">
                                See More
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <script>
        function toggleEditMode(productId) {
            const viewDiv = document.getElementById(`view-mode-${productId}`);
            const editForm = document.getElementById(`edit-mode-${productId}`);

            if (viewDiv.classList.contains('hidden')) {
                viewDiv.classList.remove('hidden');
                editForm.classList.add('hidden');
            } else {
                viewDiv.classList.add('hidden');
                editForm.classList.remove('hidden');
            }
        }
        </script>
</body>

<%- include('./partials/footer'); %>
